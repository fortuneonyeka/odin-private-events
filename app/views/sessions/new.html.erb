
  <div class="container form-group shadow-lg p-4">
        <h2 class="text-center">Log In</h2>
        <%= form_with url: sessions_path, local: true do |f| %>
              <%= f.label :name, class: "label" %>
              <%= f.text_field :name, class: "input", autofocus: true, class:"form-control" %>
          
              <%= f.label :password, class: "label" %>
              <%= f.password_field :password, class: "input", autofocus: true, class:"form-control" %>

              <%= f.submit "Log in", class: "btn btn-primary form-control mt-2" %>
        <% end %>
    <%= link_to "Back", root_path %>
    <%= link_to "SignUp", new_user_path %>
  </div>
